<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="tests" thread-count="2">

  <test name="Chrome Tests">
  	<parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.toolsqa.tests.RegisterTest"/>
            <class name="com.qa.toolsqa.tests.LoginTest"/>
            <class name="com.qa.toolsqa.tests.NavigationTest"/>
            <class name="com.qa.toolsqa.tests.DeleteAccountTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test name="Firefox Tests">
  	<parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.qa.toolsqa.tests.RegisterTest"/>
            <class name="com.qa.toolsqa.tests.LoginTest"/>
            <class name="com.qa.toolsqa.tests.NavigationTest"/>
            <class name="com.qa.toolsqa.tests.DeleteAccountTest"/>
    </classes>
  </test>
  
</suite> <!-- Suite -->
